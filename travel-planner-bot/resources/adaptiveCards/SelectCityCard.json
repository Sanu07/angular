{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "text": "Please provide destination for Room booking",
            "size": "medium",
            "wrap": true,
            "color": "accent"
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Mumbai",
            "data": {
                "value": "mumbai"
            }
        },
        {
            "type": "Action.Submit",
            "title": "Delhi",
            "data": {
                "value": "delhi"
            }
        },
        {
            "type": "Action.ShowCard",
            "title": "Other",
            "card": {
                "type": "AdaptiveCard",
                "body": [
                    {
                        "type": "Input.Text",
                        "id": "destinationForRoomBooking",
                        "placeholder": "Valid City Name",
                        "isRequired": true,
                        "errorMessage": "Should be a valid city name",
                        "label": "City",
                        "isMultiline": true
                    }
                ],
                "actions": [
                    {
                        "type": "Action.Submit",
                        "title": "OK",
                        "style": "positive"
                    }
                ],
                "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
            }
        }
    ]
}