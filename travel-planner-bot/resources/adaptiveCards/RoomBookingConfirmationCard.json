{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": 2,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${name}",
                            "weight": "bolder",
                            "size": "extraLarge",
                            "spacing": "none",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "${ratings} ${reviews}",
                            "isSubtle": true,
                            "spacing": "none",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "**${name}** room booked for **${destination}** for **${date}**",
                            "size": "small",
                            "wrap": true,
                            "maxLines": 3
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": 1,
                    "items": [
                        {
                            "type": "Image",
                            "url": "${imageURL}",
                            "altText": "Image cannot be loaded",
                            "size": "auto"
                        }
                    ]
                }
            ]
        }
    ]
}